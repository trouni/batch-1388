<div class="container">
  <div class="row">
    <div class="col">
      <h1 class="h2 my-3 d-flex justify-content-center">Movies to watch üçø</h1>
      <div data-controller="search-movies">
        <%= form_with url: movies_path, method: :get, html: {class: "mb-4"} do |f| %>
          <%= f.label :query, "Type a movie title" %>
          <%= f.text_field :query,
                           class: "form-control",
                           value: params[:query],
                           data: { action:"keyup->search-movies#search" }
                           %>
        <% end %>
        <%= render "list", movies: @movies %>
      </div>
    </div>
  </div>
</div>
